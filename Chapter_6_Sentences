/*
#include <iostream>
#include <string>
#include <vector>
#include <string.h>

//===============================================================================================================================
void error(std::string s)
{
	throw std::runtime_error(s);
}
//===============================================================================================================================
class Sentence_Correct
{
public:
	std::string strokeOne;

	Sentence_Correct(std::string st)
		:strokeOne{ st }
	{
	}

};
//===============================================================================================================================
class Sentence_Stream
{
public:
	Sentence_Stream();
	Sentence_Correct get();
	void find_space(std::vector<std::string>sentence);

private:
	bool full;
	Sentence_Correct buffer;
};
//===============================================================================================================================
Sentence_Stream::Sentence_Stream()
	:full(false), buffer{ "" }
{
}
//===============================================================================================================================
Sentence_Stream ssr;
//===============================================================================================================================
Sentence_Correct Sentence_Stream::get()
{
	if (full)
	{
		full = false;
		return buffer;
	}

	std::vector<std::string>sentence;

	std::string A;

	while(getline(std::cin, A))
										//while (std::cin >> A >> B)
	{
		sentence.push_back(A);
		find_space(sentence);
	}
}

//===============================================================================================================================
void Sentence_Stream::find_space(std::vector<std::string>sentence)
{
	std::string last_position = sentence.back();
	int a = last_position.size() - 1;
	int b = a - 1;
	int c = a - 2;


	if (last_position[c] == ' ' && last_position[b] == '.' && last_position[a] == ' ')
		std::cout << "YES" << '\n';
	else
		std::cout << "NO" << '\n';
}
//===============================================================================================================================
int main() try
{
	const std::string HELLO = "Hi!\nPlease, enter sentence for verification: ";
	std::cout << HELLO;

	while (std::cin)
	{
		Sentence_Correct stroke = ssr.get();
	}
}
catch (std::exception& e)
{
	std::cerr << e.what() << '\n';
	return 1;
}
catch (...)
{
	std::cerr << "exception \n";
	return 2;
}

