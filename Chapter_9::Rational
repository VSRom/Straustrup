#include <iostream>

//=====================================================================================================================================
class Rational
{
public:
	Rational(int x, int y);
	Rational();
//=====================================================================================================================================
//	Перегрузки
//=====================================================================================================================================
	Rational &operator=(const Rational &R)
	{
		if (this != &R)
		{
			this->x = R.x;
			this->y = R.y;
		}
		return *this;
	}

	friend Rational operator+(const Rational &R, const Rational &Rr)
	{
		Rational result;

		result.x = ((R.x * Rr.y) + (Rr.x * R.y));
		result.y = (R.y * Rr.y);

		return result;
	}

	friend Rational operator-(const Rational &R, const Rational &Rr)
	{
		Rational result;

		result.x = ((R.x * Rr.y) - (Rr.x * R.y));
		result.y = (R.y * Rr.y);
												//	result.xy = get_xy();

		return result;
	}

	friend Rational operator*(const Rational &R, const Rational &Rr)
	{
		Rational result;

		result.x = (R.x * Rr.x);
		result.y = (R.y * Rr.y);

		return result;
	}

	friend Rational operator/(const Rational &R, const Rational &Rr)
	{
		Rational result;

		result.x = (R.x * Rr.y);
		result.y = (Rr.x * R.y);

		return result;
	}

	friend bool operator==(const Rational &R, const Rational &Rr)
	{
		int xy = R.x * Rr.y;
		int yx = Rr.x * R.y;

		if (xy == yx)
			return true;
		else
			return false;
	}

	friend std::ostream &operator<<(std::ostream &os, const Rational &R)
	{
		return os << R.x << "/" << R.y << '\n';
	}
//=====================================================================================================================================
	operator double() const
	{
		double result_double = (double)this->x / (double)this->y;

		return result_double;
	}
//=====================================================================================================================================
	int get_x()
	{
		return x;
	}

	int get_y()
	{
		return y;
	}

private:
	int x = 0;
	int y = 0;
};
//=====================================================================================================================================
Rational::Rational(int x, int y)
	: x(x), y(y)
{ }
//=====================================================================================================================================
Rational::Rational()
{ }
//=====================================================================================================================================
int main()
{
	Rational b(7, 9);
	Rational d(0, 5);
	Rational a(1, 3);
	Rational g = b / d;
	
	std::cout << g;
}
//=====================================================================================================================================
