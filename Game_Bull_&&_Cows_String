//===============================================================================================================================
  V  1. Повторите упр. 12 из главы 5 (игра “Коровы и быки”), используя четыре буквы, а не четыре цифры.
//===============================================================================================================================

#include <iostream>
#include <vector>
#include <chrono>
#include <random>

//===============================================================================================================================
void error(std::string s)
{
throw std::runtime_error(s);
}
//===============================================================================================================================
class Bull_Cow
{
public:
char c;

Bull_Cow(char ch)
:c(ch)
{}
};
//===============================================================================================================================
class Bull_Cow_Stream
{
public:
Bull_Cow_Stream();
std::vector<char> Get_Comp();
std::vector<char> Get_User();
std::vector<char> Compare(std::vector<char> &vecComp, std::vector<char> &vecUser);

bool ContinueGame;

private:
int bull;
int cow;
bool allBulls;
bool whileGame;
bool bulls;
bool cows;

};
//===============================================================================================================================
Bull_Cow_Stream::Bull_Cow_Stream()
:bull(0), cow(0), allBulls(true), whileGame(false), bulls(false), cows(false), ContinueGame(true)
{}
//===============================================================================================================================
std::vector<char> Bull_Cow_Stream::Get_Comp()
{
std::vector<char>vecComp;
int i;
int min = 97;
int max = 122;

vecComp.clear();

for (i = 0; i < 4; i++)
{
int G = unsigned(std::time(nullptr));
G = min + ( G % ( max - min + 1 ) );
vecComp.push_back((char)G);
}

return vecComp;
}
//===============================================================================================================================
std::vector<char> Bull_Cow_Stream::Get_User()
{
std::vector<char>vecUser;
char Ch;
int i;

vecUser.clear();

std::cout << "Please enter symbols, through SPACE!" << '\n';

for (i = 0; i<4; i++)
{
std::cin >> Ch;
vecUser.push_back(Ch);
}

return vecUser;
}
//===============================================================================================================================
std::vector<char> Bull_Cow_Stream::Compare(std::vector<char> &vecComp, std::vector<char> &vecUser)
{
int i, j;

bull = 0;
cow = 0;

for (i = 0; i<4; i++)
{

bulls = false;
cows = false;

for (j = 0; j<4; j++)
{
if (vecComp[i] == vecUser[j] && i == j && cows == false)
{
bull++;
bulls = true;
}
else if (vecComp[i] == vecUser[j] && i != j && bulls == false)
{
cow++;
cows = true;
}

if (bull == 4)
{
allBulls = true;
ContinueGame = false;
break;
}
if (cow == 4)
break;
}
}
std::cout << bull << " BULL  ";
std::cout << cow << " COW  " << '\n';

return vecComp, vecUser;
}
//===============================================================================================================================
int main() try
{
Bull_Cow_Stream game;

std::vector<char> Get_vecComp = game.Get_Comp();

while (game.ContinueGame)
{
std::vector<char> Get_vecUser = game.Get_User();

game.Compare(Get_vecComp, Get_vecUser);
}
std::cout << "Good Nize Brother!" << '\n';
}

catch (std::exception &e)
{
std::cerr << "" << e.what() << '\n';
}
