#include <string>
#include <iostream>
#include <cctype>
#include <iomanip>


//=====================================================================================================================================
class Money
{
public:

	Money(long cent, char valuta)
		: cent(cent), valuta(valuta)
	{
	}
	//=====================================================================================================================================
	Money()
	{
	}
	//=====================================================================================================================================
	friend std::ostream &operator<<(std::ostream &os, const Money &M)
	{
		Money G;
		double dollar = M.cent / 100;
		double cent = M.cent % 100;
		std::string valuta = M.valuta_out;

		cent = G.Rounding(cent);

		return os << valuta << dollar << "." << std::setw(2) << std::setfill('0') << cent << '\n';
	}
	//=====================================================================================================================================
	friend std::istream &operator>>(std::istream &is, Money &M)
	{
		char op = 'NULL';
		double D;
\
		M.valuta = M.char_to_string(is, M);

		if (M.valuta == 'L')
			return is;

		else
		{
			is >> D;
			M.cent = D * 100;
			return is;
		}
	}
	//=====================================================================================================================================
	Money Enter();
	double Rounding(double &D);
	char char_to_string(std::istream &is, Money &M);
	double Exchange(char &val, double &D);
	Money Operations(Money &M, Money &Mm, char &op);
	double string_to_double(Money &M, std::string &val);

private:
	long cent = 0.0;
	char valuta = 'NULL';
	double scalar = 0;
	std::string valuta_out = {};
};
//=====================================================================================================================================
Money Money::Operations(Money &M, Money &Mm, char &op)
{
	Money result = {};
	double D1 = M.cent;
	double convert_D1 = M.Exchange(M.valuta, D1);

	if (Mm.scalar != 0)
	{
		if (op == '*')
		{
			convert_D1 *= Mm.scalar;
			result.cent = convert_D1;
		}

		if (op == '/')
		{
			convert_D1 /= Mm.scalar;
			result.cent = convert_D1;
		}
	}
	else
	{
		double D2 = Mm.cent;
		D2 = Mm.Exchange(Mm.valuta, D2);

		if (op == '+')
		{
			convert_D1 += D2;
			result.cent = convert_D1;
		}

		if (op == '-')
		{
			convert_D1 -= D2;
			result.cent = convert_D1;
		}
	}
	return result;
}
//=====================================================================================================================================
double Money::string_to_double(Money &M, std::string &val)
{
	M.scalar = std::stod(val);
	return M.scalar;
}
//=====================================================================================================================================
char Money::char_to_string(std::istream &is, Money &M)
{
	std::string val = {};
	char current = 'NULL';
	double scalar;

	is.get(current);

	while (isdigit(current))
	{
		val += current;
		is.get(current);
	}

	if (val != "")
	{
		string_to_double(M, val);
		is.putback(current);
		return 'L';
	}


	while (isalpha(current))
	{
		val += current;
		is.get(current);
	}

	is.putback(current);

	if (val == "USD")
		return 'U';

	if (val == "DKK")
		return 'D';

	if (val == "EUR")
		return 'E';

	if (val == "RUB")
		return 'R';

	if (val == "CNY")
		return 'C';

	if (val == "GBP")
		return 'G';

	if (val == "CHF")
		return 'F';
}
//=====================================================================================================================================
double Money::Exchange(char &valuta, double &D)
{
	double DKK_Ex = 0.158;
	double EUR_Ex = 1.05;
	double RUB_Ex = 0.036;
	double GBP_Ex = 1.36;
	double CNY_Ex = 0.1449;
	double CHF_Ex = 1.3;

	switch (valuta)
	{
	case 'U': return D;
	case 'D': return D *= DKK_Ex;
	case 'E': return D *= EUR_Ex;
	case 'R': return D *= RUB_Ex;
	case 'G': return D *= GBP_Ex;
	case 'C': return D *= CNY_Ex;
	case 'F': return D *= CHF_Ex;
	default:
		return D;
	}

	return D;
}
