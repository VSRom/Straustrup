	return D;
}
//=====================================================================================================================================
Money Money::Enter()
{
	Money GoCin1, GoCin2, result;
	std::string valuta = {};
	char op = 'NULL';

	while (std::cin >> GoCin1 >> op >> GoCin2)
	{
		std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');

		result = result.Operations(GoCin1, GoCin2, op);
		std::cout << result << "\n";
	}
	return result;
}
